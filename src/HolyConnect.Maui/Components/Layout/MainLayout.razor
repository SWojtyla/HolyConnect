@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject SettingsService SettingsService
@inject IGitService GitService
@using HolyConnect.Application.Interfaces
@implements IDisposable

<MudThemeProvider @ref="@_mudThemeProvider" Theme="_theme" @bind-IsDarkMode="@_isDarkMode" />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6">HolyConnect</MudText>
        <MudSpacer />
        @if (_isGitRepository && !string.IsNullOrEmpty(_currentBranch))
        {
            <MudChip T="string" 
                     Icon="@Icons.Material.Filled.Source" 
                     Color="Color.Info" 
                     Size="Size.Small" 
                     OnClick="NavigateToGit"
                     Class="mr-2">
                @_currentBranch
            </MudChip>
        }
        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" OnClick="NavigateToSettings" />
    </MudAppBar>
    
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="2" Variant="@DrawerVariant.Persistent" ClipMode="DrawerClipMode.Always">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Environments</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Style="height: 100%; padding: 0;">
            <CascadingValue Value="@DarkModeToggleCallback">
                @Body
            </CascadingValue>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = false;
    private MudThemeProvider? _mudThemeProvider;
    private MudTheme _theme = new MudTheme();
    private bool _isGitRepository = false;
    private string? _currentBranch;
    private System.Threading.Timer? _gitStatusTimer;

    private EventCallback<bool> DarkModeToggleCallback => EventCallback.Factory.Create<bool>(this, ToggleDarkMode);

    protected override async Task OnInitializedAsync()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
        await LoadDarkModePreference();
        await LoadGitStatus();
        
        // Refresh git status every 10 seconds
        _gitStatusTimer = new System.Threading.Timer(_ => 
        {
            // Use InvokeAsync to safely call async methods from timer callback
            _ = InvokeAsync(async () =>
            {
                try
                {
                    await LoadGitStatus();
                    StateHasChanged();
                }
                catch (Exception)
                {
                    // Silently ignore errors during periodic git status refresh
                }
            });
        }, null, TimeSpan.FromSeconds(10), TimeSpan.FromSeconds(10));
    }

    private async Task LoadDarkModePreference()
    {
        var settings = await SettingsService.GetSettingsAsync();
        _isDarkMode = settings.IsDarkMode;
    }

    private async Task LoadGitStatus()
    {
        try
        {
            _isGitRepository = await GitService.IsRepositoryAsync();
            if (_isGitRepository)
            {
                _currentBranch = await GitService.GetCurrentBranchAsync();
            }
        }
        catch
        {
            _isGitRepository = false;
            _currentBranch = null;
        }
    }

    private async void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        try
        {
            await LoadGitStatus();
            StateHasChanged();
        }
        catch (Exception)
        {
            // Silently ignore errors when loading git status during navigation
            // This is acceptable as git status is a non-critical UI feature
        }
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void NavigateToSettings()
    {
        NavigationManager.NavigateTo("/settings");
    }

    private void NavigateToGit()
    {
        NavigationManager.NavigateTo("/git");
    }

    private async Task ToggleDarkMode(bool isDark)
    {
        _isDarkMode = isDark;
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
        _gitStatusTimer?.Dispose();
    }
}
