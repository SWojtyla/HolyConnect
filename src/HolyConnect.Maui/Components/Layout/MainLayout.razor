@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject SettingsService SettingsService
@inject IGitService GitService
@inject IGitFolderService GitFolderService
@using HolyConnect.Application.Interfaces
@using HolyConnect.Maui.Services
@using HolyConnect.Domain.Entities
@implements IDisposable

<MudThemeProvider @ref="@_mudThemeProvider" Theme="_theme" @bind-IsDarkMode="@_isDarkMode" />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <div class="app-logo">
            <img src="holyconnect_logo.svg" alt="HolyConnect Logo" />
        </div>
        <MudText Typo="Typo.h6">HolyConnect</MudText>
        <MudSpacer />
        @if (_isGitRepository && !string.IsNullOrEmpty(_currentBranch))
        {
            <MudMenu Icon="@Icons.Material.Filled.Source" 
                     Color="Color.Inherit" 
                     Dense="true"
                     Class="mr-2">
                <ActivatorContent>
                    <MudChip T="string" 
                             Icon="@Icons.Material.Filled.Source" 
                             Color="Color.Info" 
                             Size="Size.Small"
                             Class="mr-2">
                        @if (!string.IsNullOrEmpty(_repositoryName))
                        {
                            <span>@_repositoryName / </span>
                        }
                        @_currentBranch
                    </MudChip>
                </ActivatorContent>
                <ChildContent>
                    <MudMenuItem OnClick="NavigateToGit">Manage Git</MudMenuItem>
                    @if (_gitFolders.Count() > 1)
                    {
                        <MudDivider />
                        <MudText Typo="Typo.caption" Class="px-4 py-2">Switch Repository</MudText>
                        @foreach (var folder in _gitFolders)
                        {
                            <MudMenuItem OnClick="@(() => SwitchGitFolder(folder.Id))"
                                        Disabled="@folder.IsActive">
                                <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                                    @if (folder.IsActive)
                                    {
                                        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Small" />
                                    }
                                    <MudText>@folder.Name</MudText>
                                </MudStack>
                            </MudMenuItem>
                        }
                    }
                </ChildContent>
            </MudMenu>
        }
        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" OnClick="NavigateToSettings" />
    </MudAppBar>
    
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="2" Variant="@DrawerVariant.Persistent" ClipMode="DrawerClipMode.Always">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Environments</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Style="height: 100%; padding: 0;">
            <CascadingValue Value="@DarkModeToggleCallback">
                @Body
            </CascadingValue>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = false;
    private MudThemeProvider? _mudThemeProvider;
    private MudTheme _theme = new MudTheme();
    private bool _isGitRepository = false;
    private string? _currentBranch;
    private string? _repositoryName;
    private IEnumerable<GitFolder> _gitFolders = Enumerable.Empty<GitFolder>();
    private System.Threading.Timer? _gitStatusTimer;

    private EventCallback<bool> DarkModeToggleCallback => EventCallback.Factory.Create<bool>(this, ToggleDarkMode);

    protected override async Task OnInitializedAsync()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
        await LoadThemePreference();
        await LoadGitStatus();
        
        // Refresh git status every 10 seconds
        _gitStatusTimer = new System.Threading.Timer(_ => 
        {
            // Use InvokeAsync to safely call async methods from timer callback
            _ = InvokeAsync(async () =>
            {
                try
                {
                    await LoadGitStatus();
                    StateHasChanged();
                }
                catch (Exception)
                {
                    // Silently ignore errors during periodic git status refresh
                }
            });
        }, null, TimeSpan.FromSeconds(10), TimeSpan.FromSeconds(10));
    }

    private async Task LoadThemePreference()
    {
        var settings = await SettingsService.GetSettingsAsync();
        _theme = ThemeProvider.GetTheme(settings.Theme);
        _isDarkMode = ThemeProvider.IsThemeDark(settings.Theme);
    }

    private async Task LoadGitStatus()
    {
        try
        {
            _gitFolders = await GitFolderService.GetAllAsync();
            var activeFolder = await GitFolderService.GetActiveAsync();
            
            if (activeFolder != null)
            {
                _isGitRepository = await GitService.IsRepositoryAsync(activeFolder.Path);
                if (_isGitRepository)
                {
                    _currentBranch = await GitService.GetCurrentBranchAsync(activeFolder.Path);
                    _repositoryName = await GitService.GetRepositoryNameAsync(activeFolder.Path);
                }
                else
                {
                    _currentBranch = null;
                    _repositoryName = null;
                }
            }
            else
            {
                // Fallback to default storage path
                _isGitRepository = await GitService.IsRepositoryAsync();
                if (_isGitRepository)
                {
                    _currentBranch = await GitService.GetCurrentBranchAsync();
                    _repositoryName = await GitService.GetRepositoryNameAsync();
                }
                else
                {
                    _currentBranch = null;
                    _repositoryName = null;
                }
            }
        }
        catch
        {
            _isGitRepository = false;
            _currentBranch = null;
            _repositoryName = null;
        }
    }

    private async Task SwitchGitFolder(Guid folderId)
    {
        try
        {
            await GitFolderService.SetActiveAsync(folderId);
            await LoadGitStatus();
            StateHasChanged();
            // Navigate to home to refresh the view
            NavigationManager.NavigateTo("/", forceLoad: true);
        }
        catch
        {
            // Silently ignore errors during git folder switch
        }
    }

    private async void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        try
        {
            await LoadGitStatus();
            StateHasChanged();
        }
        catch (Exception)
        {
            // Silently ignore errors when loading git status during navigation
            // This is acceptable as git status is a non-critical UI feature
        }
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void NavigateToSettings()
    {
        NavigationManager.NavigateTo("/settings");
    }

    private void NavigateToGit()
    {
        NavigationManager.NavigateTo("/git");
    }

    private async Task ToggleDarkMode(bool isDark)
    {
        _isDarkMode = isDark;
        await LoadThemePreference();
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
        _gitStatusTimer?.Dispose();
    }
}
