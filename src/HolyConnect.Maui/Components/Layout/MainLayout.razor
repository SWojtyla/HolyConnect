@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject SettingsService SettingsService
@inject IGitService GitService
@inject IGitFolderService GitFolderService
@inject IEnvironmentService EnvironmentService
@inject IActiveEnvironmentService ActiveEnvironmentService
@using HolyConnect.Application.Interfaces
@using HolyConnect.Maui.Services
@using HolyConnect.Domain.Entities
@implements IDisposable

<MudThemeProvider @ref="@_mudThemeProvider" Theme="_theme" @bind-IsDarkMode="@_isDarkMode" />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <div class="app-logo">
            <img src="holyconnect_logo.svg" alt="HolyConnect Logo" />
        </div>
        <MudText Typo="Typo.h6">HolyConnect</MudText>
        <MudSpacer />
        
        <!-- Environment Selector -->
        @if (_environments != null && _environments.Any())
        {
            <MudMenu Icon="@Icons.Material.Filled.Dns" 
                     Color="Color.Inherit" 
                     Dense="true"
                     Class="mr-2">
                <ActivatorContent>
                    <MudChip T="string" 
                             Icon="@Icons.Material.Filled.Dns" 
                             Color="@(_activeEnvironmentId.HasValue ? Color.Success : Color.Default)" 
                             Size="Size.Small"
                             Class="mr-2">
                        @if (_activeEnvironment != null)
                        {
                            <span>@_activeEnvironment.Name</span>
                        }
                        else
                        {
                            <span>No Environment</span>
                        }
                    </MudChip>
                </ActivatorContent>
                <ChildContent>
                    <MudText Typo="Typo.caption" Class="px-4 py-2">Active Environment</MudText>
                    @foreach (var env in _environments)
                    {
                        <MudMenuItem OnClick="@(() => SetActiveEnvironment(env.Id))"
                                    Disabled="@(env.Id == _activeEnvironmentId)">
                            <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                                @if (env.Id == _activeEnvironmentId)
                                {
                                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Small" Color="Color.Success" />
                                }
                                <MudText>@env.Name</MudText>
                            </MudStack>
                        </MudMenuItem>
                    }
                    <MudDivider />
                    <MudMenuItem OnClick="NavigateToEnvironments">
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Settings" Size="Size.Small" />
                            <MudText>Manage Variables</MudText>
                        </MudStack>
                    </MudMenuItem>
                </ChildContent>
            </MudMenu>
        }
        
        @if (_isGitRepository && !string.IsNullOrEmpty(_currentBranch))
        {
            <MudMenu Icon="@Icons.Material.Filled.Source" 
                     Color="Color.Inherit" 
                     Dense="true"
                     Class="mr-2">
                <ActivatorContent>
                    <MudChip T="string" 
                             Icon="@Icons.Material.Filled.Source" 
                             Color="Color.Info" 
                             Size="Size.Small"
                             Class="mr-2">
                        @if (!string.IsNullOrEmpty(_repositoryName))
                        {
                            <span>@_repositoryName / </span>
                        }
                        @_currentBranch
                    </MudChip>
                </ActivatorContent>
                <ChildContent>
                    <MudMenuItem OnClick="NavigateToGit">Manage Git</MudMenuItem>
                    @if (_gitFolders.Count() > 1)
                    {
                        <MudDivider />
                        <MudText Typo="Typo.caption" Class="px-4 py-2">Switch Repository</MudText>
                        @foreach (var folder in _gitFolders)
                        {
                            <MudMenuItem OnClick="@(() => SwitchGitFolder(folder.Id))"
                                        Disabled="@folder.IsActive">
                                <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                                    @if (folder.IsActive)
                                    {
                                        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Small" />
                                    }
                                    <MudText>@folder.Name</MudText>
                                </MudStack>
                            </MudMenuItem>
                        }
                    }
                </ChildContent>
            </MudMenu>
        }
        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" OnClick="NavigateToSettings" />
    </MudAppBar>
    
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="2" Variant="@DrawerVariant.Persistent" ClipMode="DrawerClipMode.Always">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Collections</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Style="height: 100%; padding: 0;">
            <CascadingValue Value="@DarkModeToggleCallback">
                @Body
            </CascadingValue>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = false;
    private MudThemeProvider? _mudThemeProvider;
    private MudTheme _theme = new MudTheme();
    private bool _isGitRepository = false;
    private string? _currentBranch;
    private string? _repositoryName;
    private IEnumerable<GitFolder> _gitFolders = Enumerable.Empty<GitFolder>();
    private IEnumerable<Domain.Entities.Environment>? _environments;
    private Domain.Entities.Environment? _activeEnvironment;
    private Guid? _activeEnvironmentId;
    private System.Threading.Timer? _gitStatusTimer;

    private EventCallback<bool> DarkModeToggleCallback => EventCallback.Factory.Create<bool>(this, ToggleDarkMode);

    protected override async Task OnInitializedAsync()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
        await LoadThemePreference();
        await LoadEnvironments();
        await LoadGitStatus();
        
        // Refresh git status every 10 seconds
        _gitStatusTimer = new System.Threading.Timer(_ => 
        {
            // Use InvokeAsync to safely call async methods from timer callback
            _ = InvokeAsync(async () =>
            {
                try
                {
                    await LoadGitStatus();
                    StateHasChanged();
                }
                catch (Exception)
                {
                    // Silently ignore errors during periodic git status refresh
                }
            });
        }, null, TimeSpan.FromSeconds(10), TimeSpan.FromSeconds(10));
    }

    private async Task LoadEnvironments()
    {
        try
        {
            _environments = await EnvironmentService.GetAllEnvironmentsAsync();
            _activeEnvironmentId = await ActiveEnvironmentService.GetActiveEnvironmentIdAsync();
            if (_activeEnvironmentId.HasValue)
            {
                _activeEnvironment = await EnvironmentService.GetEnvironmentByIdAsync(_activeEnvironmentId.Value);
            }
            else
            {
                // If no active environment and environments exist, set the first one as active
                if (_environments != null && _environments.Any())
                {
                    var firstEnv = _environments.First();
                    await ActiveEnvironmentService.SetActiveEnvironmentIdAsync(firstEnv.Id);
                    _activeEnvironmentId = firstEnv.Id;
                    _activeEnvironment = firstEnv;
                }
            }
        }
        catch (Exception)
        {
            // Silently ignore errors when loading environments
        }
    }

    private async Task SetActiveEnvironment(Guid environmentId)
    {
        try
        {
            await ActiveEnvironmentService.SetActiveEnvironmentIdAsync(environmentId);
            _activeEnvironmentId = environmentId;
            _activeEnvironment = await EnvironmentService.GetEnvironmentByIdAsync(environmentId);
            StateHasChanged();
        }
        catch (Exception)
        {
            // Silently ignore errors when setting active environment
        }
    }

    private void NavigateToEnvironments()
    {
        NavigationManager.NavigateTo("/");
    }

    private async Task LoadThemePreference()
    {
        var settings = await SettingsService.GetSettingsAsync();
        _theme = ThemeProvider.GetTheme(settings.Theme);
        _isDarkMode = ThemeProvider.IsThemeDark(settings.Theme);
    }

    private async Task LoadGitStatus()
    {
        try
        {
            _gitFolders = await GitFolderService.GetAllAsync();
            var activeFolder = await GitFolderService.GetActiveAsync();
            
            if (activeFolder != null)
            {
                _isGitRepository = await GitService.IsRepositoryAsync(activeFolder.Path);
                if (_isGitRepository)
                {
                    _currentBranch = await GitService.GetCurrentBranchAsync(activeFolder.Path);
                    _repositoryName = await GitService.GetRepositoryNameAsync(activeFolder.Path);
                }
                else
                {
                    _currentBranch = null;
                    _repositoryName = null;
                }
            }
            else
            {
                // Fallback to default storage path
                _isGitRepository = await GitService.IsRepositoryAsync();
                if (_isGitRepository)
                {
                    _currentBranch = await GitService.GetCurrentBranchAsync();
                    _repositoryName = await GitService.GetRepositoryNameAsync();
                }
                else
                {
                    _currentBranch = null;
                    _repositoryName = null;
                }
            }
        }
        catch
        {
            _isGitRepository = false;
            _currentBranch = null;
            _repositoryName = null;
        }
    }

    private async Task SwitchGitFolder(Guid folderId)
    {
        try
        {
            await GitFolderService.SetActiveAsync(folderId);
            
            // Avoid full page reload to prevent flicker; update status and trigger a client-side rerender
            await LoadGitStatus();
            StateHasChanged();
            
            // Soft navigate to current URI to notify pages listening to navigation without forcing a reload
            NavigationManager.NavigateTo(NavigationManager.Uri);
        }
        catch
        {
            // Silently ignore errors during git folder switch
        }
    }

    private async void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        try
        {
            await LoadGitStatus();
            await LoadEnvironments();
            StateHasChanged();
        }
        catch (Exception)
        {
            // Silently ignore errors when loading git status during navigation
            // This is acceptable as git status is a non-critical UI feature
        }
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void NavigateToSettings()
    {
        NavigationManager.NavigateTo("/settings");
    }

    private void NavigateToGit()
    {
        NavigationManager.NavigateTo("/git");
    }

    private async Task ToggleDarkMode(bool isDark)
    {
        _isDarkMode = isDark;
        await LoadThemePreference();
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
        _gitStatusTimer?.Dispose();
    }
}
