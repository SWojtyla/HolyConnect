@page "/flow/create"
@using Microsoft.AspNetCore.WebUtilities
@inject IFlowService FlowService
@inject IEnvironmentService EnvironmentService
@inject ICollectionService CollectionService
@inject IRequestService RequestService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h4" Class="mb-4">Create New Flow</MudText>

        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudTextField @bind-Value="_flowName" 
                         Label="Flow Name" 
                         Required="true" 
                         RequiredError="Flow name is required"
                         Class="mb-3" />
            
            <MudTextField @bind-Value="_flowDescription" 
                         Label="Description" 
                         Lines="3"
                         Class="mb-3" />

            <MudSelect @bind-Value="_selectedEnvironmentId" 
                      Label="Environment" 
                      Required="true"
                      RequiredError="Environment is required"
                      T="Guid?"
                      Class="mb-3">
                @if (_environments != null)
                {
                    @foreach (var env in _environments)
                    {
                        <MudSelectItem Value="@((Guid?)env.Id)">@env.Name</MudSelectItem>
                    }
                }
            </MudSelect>

            @if (_selectedEnvironmentId.HasValue && _collections != null)
            {
                <MudSelect @bind-Value="_selectedCollectionId" 
                          Label="Collection (Optional)" 
                          T="Guid?"
                          Clearable="true"
                          Class="mb-3">
                    @foreach (var col in _collections)
                    {
                        <MudSelectItem Value="@((Guid?)col.Id)">@col.Name</MudSelectItem>
                    }
                </MudSelect>
            }

            <MudText Typo="Typo.h6" Class="mt-4 mb-2">Flow Steps</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-3">
                Add requests to execute in sequence. Variables extracted from each step will be available to subsequent steps.
            </MudText>

            @if (_steps.Any())
            {
                <MudList T="string">
                    @foreach (var step in _steps.OrderBy(s => s.Order))
                    {
                        <MudListItem T="string" Class="mb-2">
                            <MudPaper Class="pa-3" Outlined="true">
                                <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Start">
                                    <div style="flex: 1;">
                                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                            <MudText Typo="Typo.body1"><strong>Step @step.Order:</strong></MudText>
                                            <MudSelect @bind-Value="step.RequestId" 
                                                      Label="Request" 
                                                      Required="true"
                                                      T="Guid"
                                                      Dense="true"
                                                      Margin="Margin.Dense">
                                                @if (_availableRequests != null)
                                                {
                                                    @foreach (var req in _availableRequests)
                                                    {
                                                        <MudSelectItem Value="@req.Id">@req.Name (@req.Type)</MudSelectItem>
                                                    }
                                                }
                                            </MudSelect>
                                        </MudStack>
                                        <MudStack Row="true" Class="mt-2" Spacing="2">
                                            <MudSwitch @bind-Value="step.IsEnabled" Label="Enabled" Color="Color.Primary" Dense="true" />
                                            <MudSwitch @bind-Value="step.ContinueOnError" Label="Continue on Error" Color="Color.Warning" Dense="true" />
                                            <MudNumericField @bind-Value="step.DelayBeforeExecutionMs" 
                                                           Label="Delay (ms)" 
                                                           Min="0"
                                                           Step="100"
                                                           HideSpinButtons="false"
                                                           Style="max-width: 150px;"
                                                           Dense="true"
                                                           Margin="Margin.Dense" />
                                        </MudStack>
                                    </div>
                                    <MudStack Row="true" Spacing="1">
                                        <MudIconButton Icon="@Icons.Material.Filled.ArrowUpward" 
                                                      Size="Size.Small" 
                                                      OnClick="@(() => MoveStepUp(step))"
                                                      Disabled="@(step.Order == 1)" />
                                        <MudIconButton Icon="@Icons.Material.Filled.ArrowDownward" 
                                                      Size="Size.Small" 
                                                      OnClick="@(() => MoveStepDown(step))"
                                                      Disabled="@(step.Order == _steps.Count)" />
                                        <MudIconButton Icon="@Icons.Material.Filled.Delete" 
                                                      Size="Size.Small" 
                                                      Color="Color.Error"
                                                      OnClick="@(() => RemoveStep(step))" />
                                    </MudStack>
                                </MudStack>
                            </MudPaper>
                        </MudListItem>
                    }
                </MudList>
            }
            else
            {
                <MudAlert Severity="Severity.Info" Class="mb-3">No steps added yet. Add at least one step to create the flow.</MudAlert>
            }

            <MudButton Variant="Variant.Outlined" 
                      Color="Color.Primary" 
                      StartIcon="@Icons.Material.Filled.Add"
                      OnClick="AddStep"
                      Disabled="@(!_selectedEnvironmentId.HasValue || _availableRequests == null || !_availableRequests.Any())"
                      Class="mb-4">
                Add Step
            </MudButton>

            <MudDivider Class="my-4" />

            <MudStack Row="true" Justify="Justify.FlexEnd" Spacing="2">
                <MudButton Variant="Variant.Outlined" OnClick="Cancel">Cancel</MudButton>
                <MudButton Variant="Variant.Filled" 
                          Color="Color.Primary" 
                          OnClick="CreateFlow"
                          Disabled="@(!_isValid || !_steps.Any())">
                    Create Flow
                </MudButton>
            </MudStack>
        </MudForm>
    </MudPaper>
</MudContainer>

@code {
    [SupplyParameterFromQuery(Name = "environmentId")]
    public Guid? EnvironmentIdParam { get; set; }

    [SupplyParameterFromQuery(Name = "collectionId")]
    public Guid? CollectionIdParam { get; set; }

    private MudForm? _form;
    private bool _isValid;
    private string _flowName = string.Empty;
    private string? _flowDescription;
    private Guid? _selectedEnvironmentId;
    private Guid? _selectedCollectionId;
    private List<Domain.Entities.Environment>? _environments;
    private List<Collection>? _collections;
    private List<Request>? _availableRequests;
    private List<FlowStep> _steps = new();
    private int _nextOrder = 1;

    protected override async Task OnInitializedAsync()
    {
        _environments = (await EnvironmentService.GetAllEnvironmentsAsync()).ToList();
        
        if (EnvironmentIdParam.HasValue)
        {
            _selectedEnvironmentId = EnvironmentIdParam;
            await LoadEnvironmentData();
        }
        
        if (CollectionIdParam.HasValue)
        {
            _selectedCollectionId = CollectionIdParam;
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        if (_selectedEnvironmentId.HasValue)
        {
            await LoadEnvironmentData();
        }
    }

    private async Task LoadEnvironmentData()
    {
        if (!_selectedEnvironmentId.HasValue) return;

        var allCollections = await CollectionService.GetAllCollectionsAsync();
        _collections = allCollections.Where(c => c.EnvironmentId == _selectedEnvironmentId.Value).ToList();
        
        // Load requests
        var environmentRequests = await RequestService.GetRequestsByEnvironmentIdAsync(_selectedEnvironmentId.Value);
        var collectionRequests = new List<Request>();
        
        if (_collections != null)
        {
            foreach (var collection in _collections)
            {
                var requests = await RequestService.GetRequestsByCollectionIdAsync(collection.Id);
                collectionRequests.AddRange(requests);
            }
        }
        
        _availableRequests = environmentRequests.Concat(collectionRequests).ToList();
    }

    private void AddStep()
    {
        _steps.Add(new FlowStep
        {
            Id = Guid.NewGuid(),
            Order = _nextOrder++,
            RequestId = _availableRequests?.FirstOrDefault()?.Id ?? Guid.Empty,
            IsEnabled = true,
            ContinueOnError = false
        });
    }

    private void RemoveStep(FlowStep step)
    {
        _steps.Remove(step);
        // Reorder remaining steps
        var orderedSteps = _steps.OrderBy(s => s.Order).ToList();
        for (int i = 0; i < orderedSteps.Count; i++)
        {
            orderedSteps[i].Order = i + 1;
        }
        _nextOrder = orderedSteps.Any() ? orderedSteps.Max(s => s.Order) + 1 : 1;
    }

    private void MoveStepUp(FlowStep step)
    {
        if (step.Order <= 1) return;
        
        var previousStep = _steps.FirstOrDefault(s => s.Order == step.Order - 1);
        if (previousStep != null)
        {
            previousStep.Order = step.Order;
            step.Order--;
        }
    }

    private void MoveStepDown(FlowStep step)
    {
        if (step.Order >= _steps.Count) return;
        
        var nextStep = _steps.FirstOrDefault(s => s.Order == step.Order + 1);
        if (nextStep != null)
        {
            nextStep.Order = step.Order;
            step.Order++;
        }
    }

    private async Task CreateFlow()
    {
        if (_form == null || !await _form.Validate() || !_selectedEnvironmentId.HasValue || !_steps.Any())
        {
            return;
        }

        try
        {
            var flow = new Flow
            {
                Name = _flowName,
                Description = _flowDescription,
                EnvironmentId = _selectedEnvironmentId.Value,
                CollectionId = _selectedCollectionId,
                Steps = _steps
            };

            await FlowService.CreateFlowAsync(flow);
            Snackbar.Add("Flow created successfully!", Severity.Success);
            NavigationManager.NavigateTo($"/environment/{_selectedEnvironmentId.Value}");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error creating flow: {ex.Message}", Severity.Error);
        }
    }

    private void Cancel()
    {
        if (_selectedEnvironmentId.HasValue)
        {
            NavigationManager.NavigateTo($"/environment/{_selectedEnvironmentId.Value}");
        }
        else
        {
            NavigationManager.NavigateTo("/");
        }
    }
}
