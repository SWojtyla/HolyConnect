@using MudBlazor

<div class="centered-content" style="min-height: 300px; padding: 2rem;">
    <MudStack Spacing="3" AlignItems="AlignItems.Center" Style="max-width: 400px;">
        @if (!string.IsNullOrWhiteSpace(Icon))
        {
            <MudIcon Icon="@Icon" Size="Size.Large" Style="font-size: 4rem; color: var(--mud-palette-text-secondary);" />
        }
        
        @if (!string.IsNullOrWhiteSpace(Title))
        {
            <MudText Typo="Typo.h5" Align="Align.Center" Color="Color.Default">@Title</MudText>
        }
        
        @if (!string.IsNullOrWhiteSpace(Message))
        {
            <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Default" Style="color: var(--mud-palette-text-secondary);">
                @Message
            </MudText>
        }
        
        @if (!string.IsNullOrWhiteSpace(ActionText) && OnAction.HasDelegate)
        {
            <MudButton Variant="Variant.Filled" 
                       Color="Color.Primary" 
                       StartIcon="@ActionIcon"
                       OnClick="OnAction">
                @ActionText
            </MudButton>
        }
    </MudStack>
</div>

@code {
    /// <summary>
    /// Material icon to display (e.g., Icons.Material.Filled.Info)
    /// </summary>
    [Parameter]
    public string? Icon { get; set; }

    /// <summary>
    /// Title text to display
    /// </summary>
    [Parameter]
    public string? Title { get; set; }

    /// <summary>
    /// Message text to display below the title
    /// </summary>
    [Parameter]
    public string? Message { get; set; }

    /// <summary>
    /// Text for the action button (button only shown if this and OnAction are provided)
    /// </summary>
    [Parameter]
    public string? ActionText { get; set; }

    /// <summary>
    /// Optional icon for the action button
    /// </summary>
    [Parameter]
    public string? ActionIcon { get; set; }

    /// <summary>
    /// Callback when the action button is clicked
    /// </summary>
    [Parameter]
    public EventCallback OnAction { get; set; }
}
