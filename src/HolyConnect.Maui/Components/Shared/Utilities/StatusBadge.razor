@using MudBlazor
@using HolyConnect.Maui.Utilities

<MudChip T="string"
         Color="@ColorHelper.GetStatusColor(StatusCode)" 
         Size="Size.Small" 
         Class="status-badge">
    @StatusCode
    @if (ShowText)
    {
        <text> - @ColorHelper.GetStatusText(StatusCode)</text>
    }
    <span class="sr-only">@ColorHelper.GetStatusDescription(StatusCode)</span>
</MudChip>

@code {
    /// <summary>
    /// The HTTP status code to display
    /// </summary>
    [Parameter]
    public int StatusCode { get; set; }

    /// <summary>
    /// Whether to show the status text alongside the code (e.g., "200 - Success")
    /// </summary>
    [Parameter]
    public bool ShowText { get; set; } = false;
}
